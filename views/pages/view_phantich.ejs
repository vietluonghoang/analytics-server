<!DOCTYPE html>
<html>
<head>
</head>
<body>
<center>
<div class="container">
<h2>Phantich Details</h2>

<ul>
	<li><b>Number of rows: </b>
		<%= phantich.length%>
	</li>
	</ul>
	<br>
	<br>
	<table border="1" cellpadding="5">
		<tr>
			<td align="center">Id Key</td>
			<td align="center">Author</td>
			<td align="center">Title</td>
			<td align="center">Short Description</td>
			<td align="center">Source</td>
			<td align="center">Source Inapp</td>
			<td align="center">Revision</td>
			<td align="center">Content Order</td>
			<td align="center">Content</td>
			<td align="center">Minhhoa</td>
			<td align="center">Minhhoa Type</td>
			<td></td>
		</tr>
		<% phantich.forEach(function(r) { %>
        	<tr><td align="center"> <a href="https://wethoong-server.herokuapp.com/phantich/view/<%= r.id_key %>"><%= r.id_key %></a> </td>
        		<td align="center"> <%= r.author %></td>
        		<td align="center"> <%= r.title %></td>
        		<td align="center"> <%= r.shortdescription %></td>
        		<td align="center"> <a href="<%= r.source %>">View source</a></td>
        		<td align="center"> <a href="<%= r.source_inapp %>">View source</a></td>
        		<td align="center"> <%= r.revision %></td>
        		<td align="center"> <%= r.contentorder %></td>
        		<td align="center"> <%= r.content %></td>
        		<td align="center"> <a href="<%= r.minhhoa %>">View Minhhoa</a></td>
        		<td align="center"> <%= r.minhhoatype %></td>
        		<td align="center"> <img src="<%= r.minhhoa %>" height = "150"/></td>
        	</tr>
    	<% }); %>
	</table>
</div>
<a href = "https://wethoong-server.herokuapp.com/phantich/view/"> View all Phantich </a>
</center>
</body>
</html>